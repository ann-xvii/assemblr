<% provide(:title, "Log In") %>
<div class="log-in-style">
	<h1>Log in</h1>

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= form_for(:session, url: login_path) do |f| %>
			
			<div class="form-group">
				<%= f.label :email %>
				<%= f.email_field :email, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :password %>
				<%= link_to "(forgot password)", new_password_reset_path %>
				<%= f.password_field :password, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :remember_me, class: "checkbox inline" do %>
					<%= f.check_box :remember_me, id: "checkbox-style" %>
					<span style="margin-left: 20px;">Remember me on this computer</span>
				<% end %>
			</div>
			


			<%= f.submit "Log the heck in!", class: "btn btn-primary" %>

			<% end %>
			<p id="paragraph-cta">New to Assemblr? <%= link_to "Sign up now!", signup_path %></p>
		</div>
	</div>

</div>